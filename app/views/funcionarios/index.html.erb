<% @sessao_ativa = 3%><p id="notice"><%= notice %></p>


<!-- content -->
<div class="content">
  <div class="container">
    <!-- content-left -->
    <div class="col-md-12">
      <h1>Funcionários</h1>
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-12">
            <div class="col-md-3">Nome</div>
            <div class="col-md-3">Email</div>
            <div class="col-md-3">Matrícula</div>
            <div class="clearfix" style="margin-bottom: 10px"></div>
          </div>
        </div>
        <div class="row">
          <% @funcionarios.each do |funcionario| %>
              <div class="col-md-12">
                <div class="col-md-3"><%= funcionario.pessoa.nome %></div>
                <div class="col-md-3"><%= funcionario.pessoa.email %></div>
                <div class="col-md-3"><%= funcionario.matricula %></div>
                <div class="col-md-1"><%= link_to 'Detalhes', funcionario %></div>
                <div class="col-md-1"><%= link_to 'Editar', edit_funcionario_path(funcionario) %></div>
                <div class="col-md-1"><%= link_to 'Remover', funcionario, method: :delete, data: { confirm: 'Deseja mesmo remover o funcionário?' } %></div>
              </div>
          <% end %>
        </div>
      </div>
      <br>
      <div class="clearfix" style="margin-bottom: 10px"></div>
      <%= link_to 'New Funcionario', new_funcionario_path %>
    </div>
  </div>
</div>